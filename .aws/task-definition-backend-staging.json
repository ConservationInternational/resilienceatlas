{
  "family": "resilienceatlas-backend-staging",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["EC2"],
  "cpu": "2048",
  "memory": "4096",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "database",
      "image": "ACCOUNT_ID.dkr.ecr.us-east-1.amazonaws.com/resilienceatlas-database-staging:latest",
      "essential": true,
      "memory": 1024,
      "environment": [
        {
          "name": "POSTGRES_DB",
          "value": "resilienceatlas_staging"
        },
        {
          "name": "POSTGRES_USER",
          "value": "resilienceatlas"
        }
      ],
      "secrets": [
        {
          "name": "POSTGRES_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:ACCOUNT_ID:secret:resilienceatlas/staging/db-password"
        }
      ],
      "portMappings": [
        {
          "containerPort": 5432,
          "protocol": "tcp"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/resilienceatlas-database-staging",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "pg_isready -U resilienceatlas -d resilienceatlas_staging"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    },
    {
      "name": "backend",
      "image": "ACCOUNT_ID.dkr.ecr.us-east-1.amazonaws.com/resilienceatlas-backend:latest",
      "portMappings": [
        {
          "containerPort": 3001,
          "hostPort": 0,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "memory": 2048,
      "dependsOn": [
        {
          "containerName": "database",
          "condition": "HEALTHY"
        }
      ],
      "environment": [
        {
          "name": "RAILS_ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "3001"
        },
        {
          "name": "DATABASE_HOST",
          "value": "localhost"
        },
        {
          "name": "DATABASE_PORT",
          "value": "5432"
        },
        {
          "name": "DATABASE_NAME",
          "value": "resilienceatlas_staging"
        },
        {
          "name": "DATABASE_USER",
          "value": "resilienceatlas"
        }
      ],
      "secrets": [
        {
          "name": "DATABASE_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:ACCOUNT_ID:secret:resilienceatlas/staging/db-password"
        },
        {
          "name": "SECRET_KEY_BASE",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:ACCOUNT_ID:secret:resilienceatlas/staging/secret-key-base"
        },
        {
          "name": "DEVISE_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:ACCOUNT_ID:secret:resilienceatlas/staging/devise-key"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/resilienceatlas-backend-staging",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:3001/api/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 120
      }
    }
  ]
}
