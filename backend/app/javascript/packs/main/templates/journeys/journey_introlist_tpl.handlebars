{{#each journeys}}
  <li class="m-journey__gridelement {{this.bg-big}}" data-index="{{@index}}">
    <div class="text">
      <span class="title">
        <h2>
          <a href="/journeys/{{this.id}}">
            {{this.title}}
          </a>
        </h2>
      </span>
      <span class="description">
        <p>{{this.theme}}</p>
      </span>
     <a class="btn btn-secondary theme-bg-color" href="/journeys/{{this.id}}">Learn more</a>
    </div>
    <a class="pic" href="/journeys/{{this.id}}">
      <span class="background">
      </span>
    </a>
  </li>
{{/each}}
